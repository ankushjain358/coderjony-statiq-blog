@{
    Layout = @"/_Layout.cshtml";
}

@Html.Partial("_partials/_blogHeader")

<!-- Basic page layout -->
<div class="container-fluid">
    <div class="row">
    <div class="col-md-8 markdown-body p-3 px-md-5">
        <div class="mb-5">
            <h1 class="mb-3">
                <?#= Title /?>
            </h1>
            <div class="mb-3 d-flex align-items-center">
                <img src="/img/authors/ankush-jain/thumbnail.png" class="img-fluid rounded-circle img-thumbnail me-2"
                    style="height: 45px ;" />
                <label class="text-secondary">
                    <span class="me-2">By <strong><?#= Author /?></strong></span>|
                    <span class="ms-2">Last Updated On
                            @Document.GetDateTime(WebKeys.Published).DayOfWeek,
                            @Document.GetDateTime(WebKeys.Published).ToString("MMM dd, yyyy")
                    </span>
                   </label>
            </div>

            <div>
                @if (Document.ContainsKey("Tags"))
                {
                    @foreach (string tag in Document.GetList<string>("Tags"))
                    {
                        <a  href="#" class="badge bg-success text-light">@tag</a>
                    }
                }
            </div>
        </div>

        @RenderBody()
    </div>
    <div class="col-md-4">

    </div>
</div>

</div>
@section scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/prism.min.js"></script>
}

@section styles {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.28.0/themes/prism-okaidia.min.css" />
}