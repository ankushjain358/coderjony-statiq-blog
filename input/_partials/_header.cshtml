<header class="d-flex flex-wrap justify-content-center py-3 px-4 border-bottom container-fluid">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32">
            <use xlink:href="#bootstrap" />
        </svg>
        <span class="fs-4"><?#= SiteTitle /?></span>
    </a>

    <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
        <li class="nav-item"><a href="/blogs" class="nav-link">Blog</a></li>
        @foreach(IDocument doc in Outputs.FromPipeline("Content").Where(x => x.GetBool(CustomWebKeys.ShowInNavbar)).OrderBy(x => x.GetInt(Keys.Order)))
        {
            // Don't add the home page to the nav bar
            <li class="nav-item">
                @Html.DocumentLink(doc, doc.GetString("NavbarTitle", doc.GetTitle()), new Dictionary<object, object> { { "class", "nav-link" } })
            </li>
        }
    </ul>
</header>

