ArchiveSources: => GetString(CustomWebKeys.BlogSources)
ArchivePageSize: 5
ArchiveOrderKey: Published
ArchiveOrderDescending: true
ArchiveTitle: => GetString("Title")

Title: Blogs
---

<div class="row">

<p class="font-weight-bold">Page @Model.GetString(Keys.Index)</p>

@foreach (IDocument document in Model.GetChildren())
{
        <div class="col-md-12">
            <h2>@Html.DocumentLink(document)</h2>
            @Html.Raw(document.GetString(Keys.Excerpt))
        </div>
}

@{
    IDocument previous = Model.GetDocument(Keys.Previous);
    IDocument next = Model.GetDocument(Keys.Next);
}
<div class="col-md-12 d-flex justify-content-between">
        @if (previous != null)
        {
        <a class="btn btn-primary" href="@previous.GetLink()" role="button"><i class="fas fa-angle-double-left"></i>
            Previous Page</a>
        }
        @if (next != null)
        {
        <a class="btn btn-primary" href="@next.GetLink()" role="button">Next Page <i
            class="fas fa-angle-double-right"></i></a>
        }
</div>

</div>
